{
  "name": "@content-reviewer/root",
  "private": true,
  "description": "AI-powered content review tool for Markdown and other document formats",
  "keywords": [
    "ai",
    "llm",
    "markdown",
    "proofreading",
    "content-review"
  ],
  "author": "atkei",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build && node scripts/copy-misc.mjs",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "review": "node packages/cli/dist/index.js",
    "changeset": "changeset",
    "release": "pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "verdaccio": "^6.2.3",
    "vitest": "^4.0.9"
  }
}
